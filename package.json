{
  "name": "mcp-local-lm-cli",
  "version": "0.4.0",
  "description": "MCP server wrapper for local LLMs via Ollama",
  "author": "choplin",
  "license": "MIT",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "mcp-local-lm-cli": "./dist/index.js"
  },
  "files": [
    "dist",
    "install.sh",
    "CLAUDE_DESKTOP_SETUP.md"
  ],
  "keywords": [
    "mcp",
    "model-context-protocol",
    "ollama",
    "local-llm",
    "ai",
    "llm",
    "local-ai"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/choplin/mcp-gemini-cli"
  },
  "bugs": {
    "url": "https://github.com/choplin/mcp-gemini-cli/issues"
  },
  "homepage": "https://github.com/choplin/mcp-gemini-cli#readme",
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "start": "node dist/index.js",
    "dev": "tsx --watch index.ts",
    "build": "rm -rf dist && tsc && chmod +x dist/index.js",
    "build:prod": "rm -rf dist && tsc && terser dist/index.js -o dist/index.js --compress --mangle && chmod +x dist/index.js",
    "install:claude": "chmod +x install.sh && ./install.sh",
    "postinstall": "echo '✅ mcp-local-lm-cli がインストールされました。Claude Desktop用の設定は `npm run install:claude` を実行してください。'",
    "lint": "biome lint .",
    "lint:md": "markdownlint-cli2 '**/*.md'",
    "lint:fix": "biome lint --write .",
    "lint:md:fix": "markdownlint-cli2 --fix '**/*.md'",
    "format": "biome format --write .",
    "test": "vitest",
    "test:integration": "vitest tests/integration",
    "prepare": "npm run build"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.5",
    "@types/node": "^20.0.0",
    "lefthook": "^1.11.14",
    "markdownlint-cli2": "^0.18.1",
    "terser": "^5.24.0",
    "tsx": "^4.7.0",
    "typescript": "^5.0.0",
    "vitest": "^1.0.0"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.13.1",
    "ollama": "^0.5.16",
    "zod": "^3.25.67"
  },
  "markdownlint-cli2": {
    "ignores": [
      "node_modules/**",
      ".git/**",
      ".claude/**",
      "tmp/**"
    ],
    "config": {
      "default": true,
      "MD013": false,
      "MD033": false,
      "MD041": false,
      "no-hard-tabs": false
    },
    "fix": true,
    "customRules": []
  }
}
